<!-- Add Event Page -->

<!DOCTYPE html>
<html>
<head>
	<title>Add Event | Alien Games</title>
</head>
<body>
	
	<!-- Header -->
	<h1 class="pageHeader">Add Event</h1>

	<form id="add_event" action="/add_event" method="post">

		<label>Event Name:
			<input type="text" name="name">
		</label>
		<br>

		<label>Gold Winner:
			<select name="goldWinner">
				{{#each athletes}}
				<option value="{{ID}}">{{Athlete}}</option>
				{{/each}}
			</select>
		</label>
		<br>

		<label>Gold Winning Time:
			<input type="time" name="goldTime">
		</label>
		<br>

		<label>Alien Games:
			<select name="gamesID">
				{{#each alien_games}}
				<option value="{{ID}}">{{Year}} {{Season}}</option>
				{{/each}}
			</select>
		</label>
		<br>

		
		
	</form>

	<h1>Add Athlete to Event</h1>

	<form id="select_game" action="/add_event" method="post">
		<label>Games:
			<br>
			<select name="alien_game.name">
				{{#each events}}
				<option value="{{ID}}">{{name}}</option>
				{{/each}}
			</select>
		</label>
			
		<br>
		<input type="submit" value="Submit">
	</form>

	<form id="select_events" action="/add_event" method="post">
		<label>Event:
			<br>
			<select name="athletes_events.eventID">
				{{#each events}}
				<option value="{{ID}}">{{name}}</option>
				{{/each}}
			</select>
		</label>
			
		<br>
		<input type="submit" value="Submit">
	</form>

	<form id="select_athlete" action="/add_event" method="post">
		<!-- auto populated with athletes that are in the teams that are participating in that years games -->

		<label>Athletes:
			<br>
			{{#each athletes_events}}
			<input type="checkbox" name="athletes_events.athleteID" value="{{ID}}">{{Athlete}}</option> 
			<br>
			{{/each}}
		</label>
		<br>
		<input type="submit" value="Submit">
	</form>

</body>
</html>