<!-- Associate Athletes with Events Page -->

<!DOCTYPE html>
<html>
<head>
	<title>Associate Athletes | Alien Games</title>
	 <script src="/static/filterByGames.js"></script> 
<style>
	body {
		background-color: LightGrey;
		}
		.button {
    background-color: #4CAF50; 
    border: none;
    color: white;
	padding: 8px 15px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 12x;
    margin: 4px 2px;
	cursor: pointer;
}
</style>
</head>
<style>
	table {
		width: 75%;
		border-collapse: collapse;
		border-bottom: 1px solid #ddd;
	}
	thead{
		background-color: #f2f2f2;
		font-weight: bold;
		border-bottom: 1px solid #ddd;
	}
	th, td{
		height: 50 px;
		text-align: left;
		padding: 8px;
	}
	tr:nth-child(even){
		background-color: #f2f2f2;
	}
</style>
<body>
	<!-- Link to hompage -->
	<a href="/index.html">HOME</a>
	<br>
	<a href="/edit_games">BACK</a>
<div>
<h2>Associate Athlete(s) with an Event</h2>
	<form id="add_athlete_events" action="/associate_athletes" method="post">
	Event: <select id="get_games_from_event" name='EID'>
		{{#each events}}
			<option value='{{ID}}'>{{Event}} {{Year}}</option>
		{{/each}}
		</select>
		<input type="button" value="Filter" onclick="filterAthletesEvent()" class="button">
	<br>
	<br>
	Athletes (multi-select): <br> <select multiple name='AID'>
		{{#each athletes}}
			<option value='{{ID}}'>{{Name}} {{Team}}</option>
		{{/each}}
		</select>
	<br>
	<input type="submit" value="Submit" class="button">
	</form>
</div>
<br>
<h3>List of Events with their Athletes</h3>
<table>
		<thead>
			<th>Event</th>
			<th>Athlete</th>
		</thead>
		<tbody>
			{{#each athletes_events}}
			<tr>
				<td>{{CompetingEvent}}</td>
				<td>{{Athlete}}</td>
			</tr>
			{{/each}}
		</tbody>
</table>

</body>
</html>
	
	